<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.metamong.todayido.dao.DetailDao">
    <insert id="insertReview" parameterType="reviewDto" useGeneratedKeys="true" keyProperty="review_num">
        <selectKey keyProperty="review_num" resultType="Integer" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO review
        VALUES (null, #{user_id}, #{store_num}, #{rating}, #{review_text}, default, default, default)
    </insert>
    <insert id="insertRfile" parameterType="ReviewFileDto">
        INSERT INTO reviewFile
        VALUES (NULL, #{reviewfile_num}, #{rv_oriname}, #{rv_sysname})
    </insert>

    <select id="selectStore" resultType="StoreDto" parameterType="Integer">
        SELECT * FROM store WHERE store_num=#{store_num}
    </select>
    <select id="selectReview" resultType="ReviewDto" parameterType="Integer">
        SELECT * FROM review WHERE store_num=#{store_num} order by review_num desc
    </select>
    <select id="selectLastReview" resultType="ReviewDto" parameterType="Integer">
        SELECT * FROM review WHERE review_num=#{review_num}
    </select>
</mapper>