    <select id="selectAdmin" resultType="com.metamong.todayido.dto.AdminDto">

    </select>

<select id="selectAdminIdPw" resultType="AdminDto" parameterType="AdminDto">
        SELECT * FROM admin WHERE admin_id = #{admin_id} AND admin_pw = #{admin_pw}
</select>

    <!--    카테고리 리뷰 삭제 DAO-->
